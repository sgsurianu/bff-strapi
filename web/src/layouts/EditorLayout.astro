---
import EditorNav from "../components/editor/EditorNav.astro";

interface Props {
  title?: string;
  description?: string;
}

const { title = "Panel Editor", description } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description || "Panel de administraciÃ³n del portal"} />
    <title>{title}</title>

    <style>
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      body {
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
        padding: 32px;
        max-width: 1200px;
        margin: 0 auto;
        line-height: 1.6;
        color: #333;
        background: #fff;
      }

      header {
        margin-bottom: 24px;
      }

      h1 {
        font-size: 2rem;
        margin-bottom: 0.5rem;
        color: #1a1a1a;
      }

      h2 {
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
        color: #1a1a1a;
      }

      h3 {
        font-size: 1.25rem;
        margin-bottom: 0.5rem;
        color: #1a1a1a;
      }

      .card {
        border: 1px solid #e6e6e6;
        border-radius: 12px;
        padding: 16px;
        margin-top: 16px;
        background: #fff;
      }

      label {
        display: block;
        margin-bottom: 8px;
      }

      input[type="text"],
      input[type="file"],
      textarea {
        width: 100%;
        padding: 10px;
        border-radius: 8px;
        border: 1px solid #ccc;
        font-family: inherit;
        font-size: 1rem;
      }

      button {
        padding: 10px 14px;
        border-radius: 10px;
        border: 0;
        cursor: pointer;
        font-family: inherit;
        font-size: 1rem;
        background: #0070f3;
        color: #fff;
        transition: background 0.2s ease;
      }

      button:hover {
        background: #0051cc;
      }

      button:disabled {
        background: #ccc;
        cursor: not-allowed;
      }

      hr {
        border: none;
        border-top: 1px solid #e6e6e6;
        margin: 24px 0;
      }

      code {
        font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
        background: #f5f5f5;
        padding: 2px 6px;
        border-radius: 4px;
        font-size: 0.9em;
      }

      .error {
        border: 1px solid #f1c0c0;
        background: #fff5f5;
        color: #7a1d1d;
        padding: 12px;
        border-radius: 8px;
      }

      .success {
        border: 1px solid #c0f1c0;
        background: #f5fff5;
        color: #1d7a1d;
        padding: 12px;
        border-radius: 8px;
      }
    </style>
  </head>

  <body>
    <header>
      <h1>{title}</h1>
      {description && <p style="color: #666; margin-top: 6px;">{description}</p>}
    </header>

    <EditorNav />

    <main>
      <slot />
    </main>
  </body>
</html>
